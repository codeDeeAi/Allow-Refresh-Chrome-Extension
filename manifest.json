{
    "manifest_version": 3,
    "name": "Auto Refresh Extension",
    "author": "Adeola Bada",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "idle"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    },
    "icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "host_permissions": [
      "*://*/*"
    ]
  }
  